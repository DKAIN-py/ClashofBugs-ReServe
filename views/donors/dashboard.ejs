                    <a href="#events" onclick = "alerting()">Upcoming Events</a>
                </div>

                <div class="footer-section">
                    <h3>Follow Our Journey</h3>
                    <a href="#facebook">Facebook</a>
                    <a href="#twitter">Twitter</a>
                    <a href="#instagram">Instagram</a>
                    <a href="#linkedin">LinkedIn</a>
                    <p style="margin-top: 20px; font-style: italic;">"Together, we can end hunger and build a more
                        equitable world where everyone has access to nutritious food."</p>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; 2025 ReServe. Fighting hunger, one meal at a time. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        function toggleMenu() {
            const hamburger = document.querySelector('.hamburger-menu');
            const dropdown = document.getElementById('dropdownMenu');
            
            hamburger.classList.toggle('active');
            dropdown.classList.toggle('active');
        }

        function alerting(){
            alert("Mainu Maaf Kri Maa meriye Is Hackathon tera ho naa paaya!!!")
        }

        

        // Add intersection observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.impact-card, .awareness-content > *').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(30px)';
            el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(el);
        });
    </script>
</body>

</html>