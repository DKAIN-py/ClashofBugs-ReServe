                '10': [
                    { name: 'Oatmeal with Berries', calories: 380, image: 'https://placehold.co/400x400/FF385C/ffffff?text=Oatmeal' },
                    { name: 'Tuna Salad', calories: 320, image: 'https://placehold.co/400x400/FF385C/ffffff?text=Tuna' },
                    { name: 'Chicken and Rice', calories: 520, image: 'https://placehold.co/400x400/FF385C/ffffff?text=Chicken' },
                    { name: 'Steak with Asparagus', calories: 600, image: 'https://placehold.co/400x400/FF385C/ffffff?text=Steak' },
                ]
            };

            const menuTabs = document.querySelectorAll('.menu-tab');
            const menuContainer = document.getElementById('menu-container');

            function renderMenu(days) {
                menuContainer.innerHTML = ''; // Clear existing items
                const selectedMenu = menuData[days];

                if (!selectedMenu) return;

                selectedMenu.forEach(item => {
                    const menuItemDiv = document.createElement('div');
                    menuItemDiv.className = 'menu-item-card';

                    menuItemDiv.innerHTML = `
                        <img src="${item.image}" alt="${item.name}">
                        <div class="menu-item-card-content">
                            <h4>${item.name}</h4>
                            <p>${item.calories} kcal</p>
                        </div>
                    `;
                    menuContainer.appendChild(menuItemDiv);
                });
            }

            function updateActiveTab(activeTab) {
                menuTabs.forEach(tab => {
                    tab.classList.remove('active');
                });
                activeTab.classList.add('active');
            }

            menuTabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    const days = tab.dataset.days;
                    updateActiveTab(tab);
                    renderMenu(days);
                });
            });

            // Initial render
            renderMenu('5');
        });
    </script>

