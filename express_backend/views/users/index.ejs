/* Header */
.header {
    background-color: white;
    opacity: 0.9;
    position: sticky;
    top: 0;
    z-index: 50;
    border-bottom: 1px solid #ddd;
    padding: 0.8rem 0;

}

.header-content {
    display: flex;
    justify-content: center;
    gap: 20rem;
    align-items: center;
    flex-wrap: wrap;
}

.logo-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-left: 1rem;
}

.logo-group img {
    height: 30px;
}

.logo-text {
    font-size: 1.6rem;
    font-weight: 700;
    font-family: "Protest Revolution", sans-serif;
    color: #dc3545;
    font-style: normal;
}



/* nav bar */
.main-nav {
    display: flex;
    align-items: center;
    gap: 2rem;
    font-size: 0.82rem;
    font-weight: 500;
}

.main-nav a {
    color: #4b5563;
    transition-property: color;
    transition-duration: 300ms;
    text-decoration: none;
}

.main-nav a:hover {
    color: #dc3545;
    text-decoration: underline 1px;
}

.order-btn {
    transition: all 0.3s ease-in-out;
    padding-block: 0.33rem;
    padding-inline: 1.25rem;
    background-color: rgb(223 32 32);
    border-radius: 9999px;
    color: #ffff;
    border: 2px solid #fdf6f64d;
    font-size: 0.8rem;
    cursor: pointer;
}

.order-btn:hover {
    transform: scale(1.05);
    border-color: #fff9;
}

.order-btn:hover::before {
    animation: shine 1.5s ease-out infinite;
}

.order-btn::before {
    content: "";
    position: absolute;
    width: 100px;
    height: 100%;
    background-image: linear-gradient(120deg,
            rgba(255, 255, 255, 0) 30%,
            rgba(255, 255, 255, 0.8),
            rgba(255, 255, 255, 0) 70%);
    top: 0;
    left: -100px;
    opacity: 0.6;
}



/* mobile */
.mobile-menu-btn-container {
    display: block;
}

.mobile-menu-btn {
    background: none;
    border: none;
    cursor: pointer;
}

.mobile-menu-btn svg {
    width: 1.5rem;
    height: 1.5rem;
    stroke: #4b5563;
}

.mobile-menu {
    display: none;
    background-color: white;
    box-shadow: var(--shadow-md);
    padding: 1rem 0;
    text-align: center;
}

.mobile-menu nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    font-weight: 500;
}

.mobile-menu nav a {
    width: 100%;
    text-align: center;
    padding: 0.5rem 0;
    text-decoration: none;
    color: #4b5563;
}

.mobile-menu nav button {
    width: 66.666667%;
}









/* Hero Section */
.hero-section {
    background-color: rgb(255, 238, 220);
    background-size: cover;
    /* makes the image cover entire section */
    background-position: center;
    /* centers the image */
    background-repeat: no-repeat;
    padding: 2rem 0 2.5rem;
    padding-left: 6rem;
    overflow: hidden;
}

.container {
    display: flex;
    gap: 1rem;
    justify-content: center;
    align-items: center;
}


/* left content */
.hero-content {
    width: 50%;
    color: #d42b3c;
    text-shadow: #333;
    display: flex;
    flex-direction: column;
    align-items: center;
   gap: 0.1rem;

    
}

.hero-content h1 {
    font-size: 3rem;
    color: #cd3645;
text-shadow: 1px 1px 2px #8f1d1daf; 
    font-family: "Protest Revolution", sans-serif;
    font-weight: 400;
    font-style: normal;
    font-weight: 700;
    margin-top: 0rem;
    margin-bottom: 0rem;
    text-align: center;
}

.tagline {
    font-size: 1.5rem;
    color: #dc3545;
    margin-bottom: 0rem;
    margin-top: 0.2rem;
    font-family: "Moon Dance", cursive;
  font-weight: 700;
  font-style: normal;
}

.quote {
    font-size: 0.9rem;
    color: #343b46;
    text-align: center;
    margin-bottom: 2rem;
}

/*register buttons*/
.register-buttons{
    display: flex;
    gap: 1rem;
}


.ngo-btn,
.donor-btn {
    position: relative;
    transition: all 0.3s ease-in-out;
    box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
    padding-block: 0.5rem;
    padding-inline: 1.25rem;
    background-color: rgb(223 32 32);
    border-radius: 9999px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffff;
    gap: 10px;
    font-weight: bold;
    border: 3px solid #ffffff4d;
    outline: none;
    overflow: hidden;
    font-size: 0.8rem;
    cursor: pointer;
}

.ngo-btn:hover {
    transform: scale(1.05);
    border-color: #fff9;
}

.ngo-btn:hover::before {
    animation: shine 1.5s ease-out infinite;
}

.ngo-btn::before {
    content: "";
    position: absolute;
    width: 100px;
    height: 100%;
    background-image: linear-gradient(120deg,
            rgba(255, 255, 255, 0) 30%,
            rgba(255, 255, 255, 0.8),
            rgba(255, 255, 255, 0) 70%);
    top: 0;
    left: -100px;
    opacity: 0.6;
}

.donor-btn:hover {
    transform: scale(1.05);
    border-color: #fff9;
}

.donor-btn:hover::before {
    animation: shine 1.5s ease-out infinite;
}

.donor-btn::before {
    content: "";
    position: absolute;
    width: 100px;
    height: 100%;
    background-image: linear-gradient(120deg,
            rgba(255, 255, 255, 0) 30%,
            rgba(255, 255, 255, 0.8),
            rgba(255, 255, 255, 0) 70%);
    top: 0;
    left: -100px;
    opacity: 0.6;
}


@keyframes shine {
    0% {
        left: -100px;
    }

    60% {
        left: 100%;
    }

    to {
        left: 100%;
    }
}

/* right part */

.hero-image-section {
    width: 45%;
    padding: 3rem;

}

.image-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
}

.image-card {
    position: relative;
    cursor: pointer;
    border-radius: 1rem;
    overflow: hidden;
    transition: box-shadow 300ms;
}

/* .image-card:hover {
} */

.image-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 300ms;
}

.image-card:hover img {
    transform: scale(1.05);
}

.large-image-card {
    grid-column: span 2;
    height: 12rem;
}





/* How It Works Section */
.how-it-works-section {
    background-color: #f7f7f7;
    padding: 5rem 0;
    text-align: center;
}

.section-title {
    font-size: 2.25rem;
    font-weight: 700;
    margin-bottom: 4rem;
}

.steps-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
}

.step-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

.step-icon-container {
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: var(--shadow-md);
    margin-bottom: 1.5rem;
}

.step-icon-container.primary-bg {
    background-color: #FF385C;
}

.step-icon-container.white-bg {
    background-color: white;
}

.step-icon {
    width: 3rem;
    height: 3rem;
}

.step-icon.white {
    stroke: white;
}

.step-icon.gray {
    stroke: #6b7280;
}

.step-item h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.step-item p {
    color: #4b5563;
}

/* Menu Section */
.menu-section {
    background-color: #f7f7f7;
    padding: 5rem 0;
}

.menu-tabs {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 3rem;
}

.menu-tab {
    background-color: white;
    color: #4b5563;
    font-weight: 700;
    font-size: 1.5rem;
    padding: 1rem 2rem;
    border-radius: 1rem;
    box-shadow: var(--shadow-md);
    transition: transform 200ms, background-color 200ms;
    border: none;
    cursor: pointer;
}

.menu-tab:hover {
    transform: scale(1.05);
}

.menu-tab:active {
    transform: scale(0.95);
}

.menu-tab.active {
    background-color: #FF385C;
    color: white;
}

.menu-tab span {
    font-size: 0.875rem;
    font-weight: 400;
    display: block;
    margin-top: 0.25rem;
}

.menu-container {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2rem;
}

.menu-item-card {
    background-color: white;
    border-radius: 1rem;
    box-shadow: var(--shadow-md);
    overflow: hidden;
    cursor: pointer;
    transition: box-shadow 300ms;
}

.menu-item-card:hover {
    box-shadow: var(--shadow-lg);
}

.menu-item-card img {
    width: 100%;
    height: 12rem;
    object-fit: cover;
    transition: transform 300ms;
}

.menu-item-card:hover img {
    transform: scale(1.05);
}

.menu-item-card-content {
    padding: 1.25rem;
    text-align: center;
}

.menu-item-card-content h4 {
    font-weight: 700;
    font-size: 1.125rem;
    margin-bottom: 0.25rem;
}

.menu-item-card-content p {
    font-size: 0.875rem;
    color: #6b7280;
}



/*IMPACT*/


.impact {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 2rem;
}

.impact h1 {
    font-size: 2.5rem;
    font-family: "Protest Revolution", sans-serif;
    color: #d92008;
    font-weight: 400;
    font-style: normal;
}

.impact-container {
    display: flex;
    flex-direction: column;
    padding-left: 1rem;
    gap: 1.2rem;
    width: 70%;

}

.impact-point {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    background-color: rgb(255, 238, 220);
    border-radius: 2rem;
    padding-left: 5rem;
    padding-right: 5rem;
    padding-top: 1rem;
    padding-bottom: 1rem;
      border: 1px solid rgba(157, 4, 4, 0.06);

  /* faint shadow that lifts the footer slightly off the page */
  box-shadow: 0 -5px 8px rgba(138, 11, 11, 0.04);
}

.impact-point img {
    height: 10rem;
    border-radius: 100%;
}

.impact-content {
    display: flex;
    flex-direction: column;
    gap: 0rem;
}

.impact-content h1 {
    font-size: 1.5rem;
    margin-bottom: 0;
    color: #d92008;
}

.impact-text {
    font-size: 0.8rem;
    margin-top: 1rem;
    font-size: 0.85rem;
    color: #343b46;
}








/* Our Journey Section */
.journey-section {
    background-color: rgb(255, 238, 220);
    position: relative;
    overflow: hidden;
    padding-top: 1rem;
}

.container-journey {
    position: relative;

    
}

.section-title {
    font-size: 2.5rem;
    font-family: "Protest Revolution", sans-serif;
    color: #d92008;
    font-style: normal;
    font-weight: 700;
    
    margin-bottom: 2.5rem;
    text-align: center;
}

.journey-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 70%;
    transform: translateX(-50%);
    width: 2px;
    height: 100%;
    background-image: repeating-linear-gradient(0deg, #e97373, #e9b185 8px, transparent 8px, transparent 15px);
    z-index: 1;
}

.journey-item {
    position: relative;
    display: flex;
    align-items: center;
    margin-bottom: 2rem;
    z-index: 2;
}


.journey-item-content {
    width: 50%;
    padding: 0 2rem;
    text-align: left;
}


 .journey-item-content {
    text-align: right;
    
}
.journey-item-content p{
    padding-left: 8rem;
    text-align: right;
    
}


.journey-item-image {
    width: 50%;
    padding: 0 2rem;
}

.journey-item-image img {
    width: 70%;
    height: 12rem;
    border-radius: 1rem;
    box-shadow: #333 ;
}

.journey-item-content h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    font-family: "Protest Revolution", sans-serif;
    color: #d92008;
    font-style: normal;
    font-weight: 400;
    
}

.journey-item-content p {
    color: #4b5563;
    font-size: 0.9rem;
}













/* Media Queries for Responsiveness */
@media (min-width: 768px) {

    .main-nav,
    .order-btn {
        display: flex;
    }

    .mobile-menu-btn-container {
        display: none;
    }

    .steps-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .menu-container {
        grid-template-columns: repeat(2, 1fr);
    }

    .footer-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .journey-item {
        flex-direction: row;
    }

    .journey-item:nth-child(even) {
        flex-direction: row;
    }

    .journey-item-content {
        width: 45%;
    }

    .journey-item-image {
        width: 45%;
    }
}

@media (min-width: 1024px) {
    .hero-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .steps-grid {
        grid-template-columns: repeat(3, 1fr);
    }

    .menu-container {
        grid-template-columns: repeat(4, 1fr);
    }

    .footer-grid {
        grid-template-columns: repeat(4, 1fr);
    }
}





